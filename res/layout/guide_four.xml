<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_fly" >

    <ImageView
        android:id="@+id/runway_fly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:background="@drawable/guide_3"
        android:focusable="true"
        android:scaleType="centerCrop" />
    
    <RelativeLayout
        android:id="@+id/center_layout_3"
        android:layout_width="match_parent"
	    android:layout_height="500.0dip"
		android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="160dp"
	     >
 
        <ImageView
            android:id="@+id/t3_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40.0dip"
            android:layout_marginTop="70.0dip"
            android:src="@drawable/t3_could_left1" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/t3_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120.0dip"
            android:layout_marginTop="45.0dip"
            android:src="@drawable/t3_could_left2" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/t3_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20.0dip"
            android:layout_marginLeft="70.0dip"
            android:src="@drawable/t3_could_right1" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/t3_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50.0dip"
            android:layout_marginRight="40.0dip"
            android:src="@drawable/t3_could_right2" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/t3_icon6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
           />

        <ImageView
            android:id="@+id/t3_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t3_icon6"
            android:layout_centerHorizontal="true"
            android:src="@drawable/plane"
            android:visibility="invisible" />

    </RelativeLayout>
    
	<TextView 
	    android:id="@+id/text_4"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="500dp"
	    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="再后来我毕业了，你去了迪拜，我们交流的时间少了，我也只是偶尔和同学开玩笑说，我有个女神在迪拜。"
        android:textColor="#14b356"
	    android:textSize="18sp" />
	
	<ImageView
        android:id="@+id/g3_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/tutorial_next" />
	
</RelativeLayout>